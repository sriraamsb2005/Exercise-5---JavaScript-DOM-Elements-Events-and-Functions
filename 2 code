function calculateEMI() {
  let P = parseFloat(document.getElementById("loan").value) || 0;
  let annualRate = parseFloat(document.getElementById("rate").value) || 0;
  let years = parseInt(document.getElementById("years").value) || 0;

  if (P <= 0 || annualRate <= 0 || years <= 0) {
    document.getElementById("result").innerHTML = "⚠️ Please enter valid values.";
    return;
  }

  let N = years * 12;                  // Total months
  let R = annualRate / 12 / 100;       // Monthly interest rate

  // EMI Formula
  let emi = (P * R * Math.pow(1 + R, N)) / (Math.pow(1 + R, N) - 1);

  document.getElementById("result").innerHTML =
    `Your Monthly EMI is: ₹${emi.toFixed(2)}`;
}
